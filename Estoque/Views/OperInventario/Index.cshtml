@using Estoque.Models
@model List<ProdutoInventarioViewModel>

@{
    ViewBag.Title = "Inventário de Estoque";
}

<style>
    /*
     * Neste momento eu estou buscado cada 1 th (coluna)e vou passando a codificação de designer através do id=grid
     */
    #grid th:nth-child(1) {
        width: 50px;
    }

    #grid th:nth-child(2) {
        width: 150px;
    }

    #grid th:nth-child(3) {
        width: 70px;
    }

    #grid th:nth-child(4) {
        width: 150px;
    }

    #grid th:nth-child(5) {
        width: 100px;
    }

    #grid th:nth-child(6) {
        width: 130px;
    }

    #grid th:nth-child(7) {
        width: 100px;
    }

    #grid th:nth-child(8) {
        width: auto;
    }
</style>


<div class="row">
    <div class="col-md-12" style="margin: 15px">
        <h3 class="text-center">@ViewBag.Title</h3>
        <hr />
        <div id="msg_mensagem_aviso" class="text-danger invisivel"></div>
        <fieldset>
            @Html.AntiForgeryToken()
            <div class="row" style="margin-bottom: 15px">
                <div class="col-md-2">
                    <a id="btn_incluir" class="btn btn-success" role="button">
                        <i class="glyphicon glyphicon-plus"></i> Incluir Inventário
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table id="grid" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Local</th>
                                <th>Código</th>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Unidade Medida</th>
                                <th>Contagem</th>
                                <th>Motivo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{var sequencia = 1;}
                                @foreach (var produto in Model)
                                {
                            <tr data-id="@produto.Id">
                                <td>@sequencia</td>
                                <td>@produto.NomeLocalArmazenamento</td>
                                <td>@produto.Codigo</td>
                                <td>@produto.NomeProduto</td>
                                <td>@produto.QuantEstoque</td>
                                <td>@produto.NomeUnidadeMedida</td>
                                <td><input type="number" class="form-control" value=""></td>
                                <td><input type="text" class="form-control" value=""></td>
                            </tr>
                            sequencia++;
                                }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <a id="btn_salvar" class="btn btn-primary" role="button">
                        <i class="glyphicon glyphicon-ok"></i> Salvar
                    </a>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<!--Fazendo a seção JavaScript-->

@section scripts{
    <script src="~/Scripts/comum.js"></script>
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script>
        function limpar_tela() {
            $('#grid tbody tr input').each(function (index, input) {
                $(input).val('');
            });
        }
        function verificar_preenchimento() {
            var ret = false;
            $('#grid tbody tr input[type=number]').each(function (index, input) {
                if ($(input).val() != '') {
                    //e o ret true é para ser retornado pela função
                    ret = true;
                    //este return false é para parar o (each)
                    return false;
                }
            });
            return ret;
        }
        function obter_dados_inventario() {
            var ret = [];
            $('#grid tbody tr').each(function (index, item) {
                var tr = $(item),
                    //tr.find('td')=> Estou buscando lendo()find todas as colunas (td). (qual das colunas (eq(4) seria a coluna 4)) eo que eu cou pegar o texto (text)
                    //desta forma eu obtenho a informação da quantidade de estoque
                    quant_estoque = parseInt(tr.find('td').eq(4).text()),
                    //veja que estou usando o atributo (data-id), desta forma eu tambem consigo pegar o valor que no casa seria? O (produto.Id)
                    id_produto = tr.attr('data-id'),
                    //Vou no (tr) agora eu vou pegar o input do tipo texto e dou uma val(). para pegar o valor dele.
                    //após ter pegado o valor dele. EU DOU UM PARSEINT para converter o valor...
                    quant_inventario = parseInt(tr.find('input[type=number]').val()),
                    //aqui neste caso faço a mesma coisa.
                    //vou no tr dou m find pego o input do tipo texo e dou um val(), para pegar o valor dele.
                    motivo = tr.find('input[type=text]').val();

                //quantidade inventário se ela foi preenchida ou seja, se ela é maior do que zero
                if (quant_inventario > 0) {
                    //este ret será um vetor ou um array. Por isto posso utilizar o (push)
                    //PRONTO ! É ISTO QUE VAMOS ENVIAR...
                    ret.push({
                        IdProduto: id_produto,
                        QuantidadeEstoque: quant_estoque,
                        QuantidadeInventario: quant_inventario,
                        Motivo: motivo
                    });
                }
            });
            return ret;
        }
        $(document).ready(function () {
            limpar_tela();
        })
        .on('click', '#btn_incluir', function () {
            if (verificar_preenchimento()) {
                swal({
                    html: 'Algumas quantidades já foram preenchidas.<br/>Deseja realmente limpar os dados para iniciar um novo inventário?',
                    type: 'info',
                    showCancelButton: true,
                    allowEscapeKey: false,
                    allowOutsideClick: false,
                    cancelButtonText: 'Não',
                    confirmButtonClass: 'btn-primary',
                    confirmButtonText: 'Sim'
                }).then(function (opcao) {
                    if (opcao.value) {
                        limpar_tela();
                    }
                });
            }
            else {
                limpar_tela();
            }
        })
        .on('click', '#btn_salvar', function () {
            if (!verificar_preenchimento()) {
                swal('Aviso', 'Para salvar, você deve preencher todas as quantidades.', 'warning');
            }
            else {
                var url = '@Url.Action("Salvar", "OperInventario")',
                    dados = { dados: obter_dados_inventario() };
                //Poderiamos enviar os dados como post. Mas vamos enviar os dados como Ajax.
                //Porque como ajax? Porque vamos enviar os dados como Json e não como form
                $.ajax({
                    //o verbo ou o método é o POST
                    type: 'POST',
                    // processData: false, Porque?  não quero que processe NADA minha função Ajax  vai enviar os dados (obter_dados_inventario) e pronto
                    processData: false,
                    //Estou conversando com o meu (Server ou Servidor) vou enviar a aplicação via Json
                    contentType: 'application/json',
                    //Este (stringify) tem que ser colocado quando estamos trabalhando com JSON => E passo o meus dados
                    data: JSON.stringify(add_anti_forgery_token(dados)),
                    // a url = já foi montada acima
                    url: url,
                    dataType: 'json',
                    //Este (response é a resposta) do servidor
                    success: function (response) {
                        if (response.OK) {
                            swal('Sucesso', 'Inventário salvo com sucesso.', 'info');
                            limpar_tela();
                        }
                        else {
                            swal('Aviso', 'Não foi possível salvar o inventário.', 'warning');
                        }
                    },
                    error: function () {
                        swal('Aviso', 'Não foi possível salvar o inventário.', 'warning');
                    }
                });
            }
        });
    </script>
}

