
@model List<Estoque.Models.UnidadeMedidaModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Unidade de Medida";
}
@section Styles {
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/UnidadeMedida.css" rel="stylesheet" />
}

@section TituloGrid{
    <th>Nome</th>
    <th>Sigla</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section LinhaGrid{

    @{
        var linha = 0;
        <!--Fiz o bind lá em cima do meu model, agora posso fazer um foreach-->
        foreach (var item in Model)
        {
            linha++; <!--No 1º loop ele passar a ser linha 1 e assim sucessivamente. Até linha ser menor que quantide maxima-->
            <!--paginação continuação-->
            <!--Este if é um contador, enquanto linha form menor do que quantidade de pagina. Ele vai imprimir-->
            if (linha <= ViewBag.QuantMaxLinhasPorPagina)
            {
                var ativo = (item.Ativo ? "SIM" : "NÂO");
                <!--conteudo-->
                  <tr data-id="@item.Id">
                  <td>@item.Nome</td>
                  <td>@item.Sigla</td>
                  <td>@ativo</td>
            <td>
               <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Editar</a>
               <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
            </td>
           </tr>
                <!--paginação continuação-->
            }
            //Ele vai imprimir até a quinta linha na sexta ele dá um brezk no loop. E vi para baixo imprimir a proxima pagina
            else
            {
                break;

            }

        }
    }
}

@section CamposCadastro {
    <div class="row">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })

                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("txt_sigla", "Sigla", new { @class = "col-md-3 control-label" })

                @Html.TextBox("txt_sigla", null, new { @class = "form-control" }))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })

                @Html.CheckBox("cbx_ativo")
            </div>
        </div>

    </div>
}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script>
        var tituloPagina = '@ViewBag.Title';
        var url_excluir = '@Url.Action("ExcluirUnidadeMedida", "CadUnidadeMedida")';
        var url_confirmar = '@Url.Action("SalvarUnidadeMedida", "CadUnidadeMedida")';
        var url_page_click = '@Url.Action("GrupoUnidadeMedida", "CadUnidadeMedida")';
        var url_tam_pag_change = '@Url.Action("GrupoUnidadeMedida", "CadUnidadeMedida")';
        var url_alterar = '@Url.Action("RecuperarUnidadeMedida", "CadUnidadeMedida")';
    </script>
    <script src="~/Scripts/Cadastro/UnidadeMedida.js"></script>

}

