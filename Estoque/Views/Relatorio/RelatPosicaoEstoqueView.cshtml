@model List<Estoque.Models.ViewModel.RelatPosicaoEstoqueViewModel>
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Cadastro/Logo_Arredondado.css" rel="stylesheet" />
    <title>Posição no Estoque</title>
    @Styles.Render("~/Content/css")
    <style>
        table th:nth-child(1) {
            width: 10%;
        }

        table td:nth-child(1) {
            text-align: right;
        }

        table td:nth-child(2) {
            text-align: left;
        }

        table th:nth-child(3) {
            width: 10%;
        }

        table td:nth-child(3) {
            text-align: right;
        }
        /*para fazer a quebra de pagina*/
        tr {
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <div class="col-md-12 text-center">     
        <img id="logo_redondo" src="~/Content/Imagens/Adega.jpeg" alt="Adega" />
    </div>
    <h3>Posição no Estoque</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Produto</th>
                <th>Quantidade</th>
            </tr>
        </thead>
        @{ 
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CodigoProduto</td>
                    <td>@item.NomeProduto</td>
                    <td>@item.QuantidadeProduto</td>
                </tr>
            }
        }
    </table>
</body>
</html>
